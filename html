    <title>Sample Application</title>
    <style>
        .entry {
            border: 1px solid #000;
            padding: 10px;
            margin-top: 10px;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            max-width: 300px;
        }

        .form-container label,
        .form-container textarea,
        .form-container input {
            margin-bottom: 10px;
        }

        #message {
            resize: both;
            overflow: auto;
        }


        .settings-container {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-left: 10px;
        }

        .settings-button {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
        }

        .settings-dropdown {
            position: absolute;
            top: 30px;
            right: 0;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 5px;
            display: none;
        }

        .color-button {
            background: none;
            border: none;
            cursor: pointer;
        }
    </style>
